{
  "name": "okashoi/laravel-clean-architecture",
  "type": "project",
  "description": "Example application for introducing clean architecture",
  "authors": [
    {
      "name": "Okada Shohei",
      "email": "okashoicircus0@gmail.com"
    }
  ],
  "keywords": [
    "framework",
    "laravel",
    "clean architecture"
  ],
  "license": "MIT",
  "require": {
    "php": "^7.3",
    "fideloper/proxy": "^4.0",
    "laravel/framework": "5.8.*",
    "laravel/tinker": "^1.0",
    "okashoi/myapp-api": "*@dev",
    "okashoi/myapp-console": "*@dev",
    "okashoi/myapp-task-component": "*@dev",
    "okashoi/myapp-waiting-component": "*@dev",
    "okashoi/myapp-web": "*@dev"
  },
  "require-dev": {
    "beyondcode/laravel-dump-server": "^1.0",
    "filp/whoops": "^2.0",
    "fzaninotto/faker": "^1.4",
    "mockery/mockery": "^1.0",
    "nunomaduro/collision": "^3.0",
    "phpunit/phpunit": "^7.5"
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  },
  "extra": {
    "laravel": {
      "dont-discover": []
    }
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    },
    "classmap": [
      "database/seeds",
      "database/factories"
    ]
  },
  "repositories": [
    {"type": "path", "url": "./packages/components/Tasks"},
    {"type": "path", "url": "./packages/components/Waitings"},
    {"type": "path", "url": "./packages/api"},
    {"type": "path", "url": "./packages/console"},
    {"type": "path", "url": "./packages/web"}
  ],
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "post-autoload-dump": [
      "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
      "@php artisan package:discover --ansi"
    ],
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "post-create-project-cmd": [
      "@php artisan key:generate --ansi"
    ]
  }
}
